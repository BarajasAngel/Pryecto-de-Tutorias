
@{
    ViewData["Title"] = "Profesor";
    Layout = "~/Views/Shared/_LayaoutProfesor.cshtml";
}
@if (@ViewBag.Bool)
{
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <i class="bi bi-exclamation-triangle-fill"></i>
    <div>
        @ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>    
}
<div class="container h-100">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-12">
            Usuario: @ViewBag.Usuario 
        </div>
        <div class="col-lg-12">
            Nombre: @ViewBag.Info[0] 
        </div>
        <div class="col-lg-12">
            Correo: @ViewBag.Info[1] 
        </div>
        <div class="col-lg-12">
            Grupo: @ViewBag.Info[2] 
        </div>
        <div class="col-lg-12">
            Horas Tutoria: @ViewBag.Info[3] 
        </div>
        <div class="col-lg-12">
            Horas Totales: @ViewBag.Info[4] 
        </div>
        <div class="col-lg-12">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Modal">
                Cambiar Contraseña
            </button>
        </div> 
        <div class="col-lg-12">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Modal2">
                Cambiar Correo
            </button>
        </div>
    </div>
</div>

<!-- Modal Contraseña -->
<div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalLabel">Cambiar Contraseña</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form asp-action="Profesor" asp-controller="Config" method="post" id="frmUpdate">
            <div class="form-gruop">
                <label for="Usuario" class="form-label">Usuario: </label>
                <input class="form-control" type="text" name="Usuario" id="Usuario" value="@ViewBag.Usuario" readonly/>
            </div>
            <div class="form-gruop">
                <label for="Contra1" class="form-label" >Contraseña: </label>
                <input class="form-control" type="password" name="Pass" id="Contra1" value="" />
            </div>
            <div class="form-gruop">
                <label for="Contra2" class="form-label">Confirmar Contreaseña: </label>
                <input class="form-control" type="password" name="Pass2" id="Contra2" value="" />
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="submit()">Guardar Cambios</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal Correo -->
<div class="modal fade" id="Modal2" tabindex="-1" aria-labelledby="Modal2Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalLabel">Cambiar Correo</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form asp-action="EmailProfesor" asp-controller="Config" method="post" id="frmUpdateEmail">
            <div class="form-gruop">
                <label for="Usuario" class="form-label">Usuario: </label>
                <input class="form-control" type="text" name="Usuario" id="Usuario" value="@ViewBag.Usuario" readonly/>
            </div>
            <div class="form-gruop">
                <label for="Correo" class="form-label" >Correo: </label>
                <input class="form-control" type="text" name="Correo" id="Correo" required />
            </div>            
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="submitEmail()">Guardar Cambios</button>
      </div>
    </div>
  </div>
</div>


<script>
    function submit(){
        var contra1 = document.getElementById("Contra1").value;
        var contra2 = document.getElementById("Contra2").value;

        if(contra1 != "" && contra2 != ""){
            if(contra1 == contra2){
                frmUpdate.submit();
            }
        }
    }
    function submitEmail(){
        var Correo = document.getElementById("Correo").value;
        if(Correo != ""){
            frmUpdateEmail.submit();
        }
    }
</script>

